{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ 
      "dom","es5","es6", "scripthost"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "types": [
      "jasmine",
    ]
  },
  "include": [
    "src/**/*.ts", 
    "test/**/**.ts"
  ],
  "exclude": [
    "node_modules",
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
